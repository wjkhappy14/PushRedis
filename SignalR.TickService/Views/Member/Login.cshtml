@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Cache-Control" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>三公-后台</title>
    <link href="/Styles/style.css?v=@ConfigUtil.Version" type="text/css" rel="stylesheet" />
    <script>
        var VERSION = @ConfigUtil.Version;
        document.domain = document.domain;
    </script>
    <script type="text/javascript" src="http://apps.bdimg.com/libs/jquery/1.11.3/jquery.min.js"></script>
    <script type="text/javascript">
        if (!window.jQuery) {
            document.write('<script type="text/javascript" src="http://hhhh369.com/Scripts/jquery.js"><\/script>');
        }
    </script>
</head>
<body>
    <form>
        <div class="login">
            <div class="bd">
                <div class="item">
                    登录账号：
                    <input id="Account" name="Account" type="text" value="" class="input" autocomplete="off" />
                </div>
                <div class="item">
                    登录密码：
                    <input id="Password" name="Password" type="password" value="" class="input" autocomplete="off" />
                </div>
            </div>
            <div class="ft">
                <input type="submit" value="登录" class="btn" id="btn-submit" />
            </div>
        </div>
    </form>
    <script>
        +(function ()
        {
            var Account = $("#Account");
            var Password = $("#Password");
            setTimeout(function ()
            {
                Account.focus();
            }, 0);

            $("#btn-submit").on("click", function (e)
            {
                e.preventDefault();
                var _this;
                if (!$.trim(Account.val()))
                {
                    alert("请输入用户名");
                    Account.focus();
                    return false;
                }
                if (!$.trim(Password.val()))
                {
                    alert("请输入密码");
                    Password.focus();
                    return false;
                }
                _this = $(this).prop("disabled", true);
                $.ajax({
                    url: "/Member/DoLogin",
                    type: "post",
                    dataType: "json",
                    data: {
                        Account: Account.val(),
                        Password: Password.val()
                    },
                    success: function (x)
                    {
                        if (x.Status == 1)
                        {
                            location.href = "/All/Pin.html?v=" + VERSION;
                        }
                        else
                        {
                            alert(x.Data);
                        }
                    },
                    complete: function ()
                    {
                        _this.prop("disabled", false);
                    }
                });
            });
        })();
    </script>
</body>
</html>